@model List<AdminLTE.MVC.ViewModels.MovieResponseModel>

<div class="right_col" role="main">
    <div class="col-md-12 col-sm-12 ">
        <div class="x_panel">
            <div class="x_title">
                <h2>List Of Movies</h2>
                <div class="clearfix"></div>
            </div>
            <div class="x_content">
                <div class="row">
                    <div class="col-sm-12">
                        <div class="card-box table-responsive">
                            <form asp-action="MovieFBDAdd" method="post">
                                <table class="table table-striped table-bordered" style="width:100%">
                                    <thead>
                                        <tr>
                                            <th>Movie Id</th>
                                            <th>Movie Code</th>
                                            <th>Name</th>
                                            <th>Grade Code</th>
                                            <th>Production House Code</th>
                                            <th>Language Code</th>
                                            <th>Production Type</th>
                                            <th>Release Date</th>
                                            <th>Status Value</th>
                                            <th>Slug</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @for (int i = 0; i < Model.Count; i++)
                                        {
                                            <tr>
                                                <td>
                                                    @Model[i].MovieId
                                                    <input type="hidden" asp-for="@Model[i].MovieId" />
                                                </td>
                                                <td>
                                                    @Model[i].MovieCode
                                                    <input type="hidden" asp-for="@Model[i].MovieCode" />
                                                </td>
                                                <td>
                                                    @Model[i].Name
                                                    <input type="hidden" asp-for="@Model[i].Name" />
                                                </td>
                                                <td>
                                                    @Model[i].GradeCode
                                                    <input type="hidden" asp-for="@Model[i].GradeCode" />
                                                </td>
                                                <td>
                                                    @Model[i].ProductionHouseCode
                                                    <input type="hidden" asp-for="@Model[i].ProductionHouseCode" />
                                                </td>
                                                <td>
                                                    @Model[i].LanguageCode
                                                    <input type="hidden" asp-for="@Model[i].LanguageCode" />
                                                </td>
                                                <td>
                                                    @Model[i].ProductionType
                                                    <input type="hidden" asp-for="@Model[i].ProductionType" />
                                                </td>
                                                <td>
                                                    @Model[i].ReleaseDate
                                                    <input type="hidden" asp-for="@Model[i].ReleaseDate" />
                                                </td>
                                                <td>
                                                    @Model[i].StatusValue
                                                    <input type="hidden" asp-for="@Model[i].StatusValue" />
                                                </td>
                                                <td>
                                                    @Model[i].Slug
                                                    <input type="hidden" asp-for="@Model[i].Slug" />
                                                </td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                                <button type="submit" class="btn btn-primary">Save</button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

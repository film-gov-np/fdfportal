<!-- page content -->
@model List<AdminLTE.MVC.ViewModels.DashboardTableDataVm>

<div class="right_col bg-white" role="main">
    <div class="row w-100 border-0">
        <div class="col-12 col-md-4 p-2 h-100">
            <div class="tile-stats border-0 shadow-lg border-0 h-100">
                <div class="count">Today Collection</div>
                <h3>Theater collection : @ViewBag.DailyCollection</h3>
                @* <h3>Theater Tax : @ViewBag.DailyTaxCollection</h3> *@
            </div>
        </div>
        <div class="col-12 col-md-4  p-2">
            <div class="tile-stats border-0 shadow-lg border-0">
                <div class="demo-container px-2">
                    <div class="count">Weekly Collection</div>
                    <canvas id="chart_plot_Week" class="demo-placeholder"></canvas>
                </div>
            </div>
        </div>
        <div class="col-12 col-md-4 p-2">
            <div class="tile-stats border-0 shadow-lg border-0">
                <div class="demo-container px-2">
                    <div class="count">Monthly Collection</div>
                    <canvas id="chart_plot_Month" class="demo-placeholder"></canvas>
                </div>
            </div>
        </div>


       
    </div>
    
    <br />
    <div class="row w-100">
            <div class="col-md-12 col-sm-12 p-2">
                <div class="x_panel shadow-lg border-0">
                    <div class="x_title">
                        <h2>Theater Collection List</h2>

                        <div class="clearfix"></div>
                    </div>
                    <div class="x_content">
                        <div class="row">
                            <div class="col-sm-12">
                                <div class="card-box table-responsive">

                                    <table id="datatable" class="table table-striped table-bordered" style="width:100%">
                                        <thead>
                                            <tr>
                                                <th>Date</th>
                                                <th>Theatre</th>
                                                <th>Flim Development Fee</th>
                                                <th>Gross Collection</th>
                                                <th>Pending Amount</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            @foreach (var item in Model)
                                            {
                                                <tr>
                                                    <td>@item.dateTime.ToString("d")</td>
                                                    <td>@item.TheatreName</td>
                                                    <td>@item.TotalCollection</td>
                                                    <td>@item.GrossCollection</td>
                                                    <td>@item.PendingAmount</td>
                                                </tr>
                                            }
                                        </tbody>

                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

<!-- /page content -->
